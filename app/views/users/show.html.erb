<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
    
      <div class="page-header">

        <div class="col-md-3 col-sm-4">
          <div class="text-center">
           <%=image_tag @user.avatar, class: "img-responsive img-rounded" %>
         </div>
        </div>


        <div class="col-md-9 col-sm-8">
           <h1><%= @user.name %></h1><br>
           <h4><%= @user.email %></h4><br>
           <div><%= simple_format @user.intro %></div><br>
           <%if @user.email == current_user.email %>
           <%= link_to 'Edit Profile', edit_user_path(@user),class: "btn btn-primary" %>
          <% end %> 
        </div>
        <div class="clearfix"></div>
        </div><br>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><strong><%= @commented_restaurants.count %></strong>間已評論餐廳</h3>
           </div>
           <div class="panel-body">
            <% @commented_restaurants.each do |restaurant|%>
            <%= link_to restaurant_path(restaurant) do %>
            <div class ="my-restaurant" >
            <div>
              <% for img_id in 0..19 %>
               <% if image_path(restaurant.image).include?('/'+img_id.to_s+'.jpg') %>
               <%= image_tag('/seed_img/'+img_id.to_s+'.jpg',class: "img-responsive img-rounded") %>
              <% end %> 
              <% end %>
            </div>
           <h4><%= restaurant.name %></h4><br>
         </div>
         <% end %>
        <% end %>
      </div>
     </div>
    </div>
  </div>
 </div>
</div>